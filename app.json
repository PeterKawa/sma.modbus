{
	"id": "sma.modbus",
	"sdk": 2,
  "brandColor": "#df001c",
	"name": {
		"en": "SMA Inverters",
		"nl": "SMA Omvormers"
	},
	"tags": {
		"en": [ "SMA", "inverter", "solar", "sunny boy" ],
		"nl": [ "SMA", "omvormer", "zonnepanelen", "sunny boy" ]
	},
	"version": "1.1.0",
	"compatibility": ">=2.0.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com",
		"website": "https://github.com/jghaanstra/sma.modbus"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "jghaanstra"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/jghaanstra/sma.modbus/issues"
	},
  "homeyCommunityTopicId": 696,
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"category": "energy",
	"description": {
		"en": "Monitor SMA inverters over modbus protocol",
		"nl": "Monitor SMA omvormers via modbus protocol"
	},
	"dependencies": {
		"net": "*"
	},
  "capabilities": {
    "measure_yield": {
      "type": "number",
      "title": {
        "en": "Total Yield",
        "nl": "Totale opbrengst"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/total_yield.svg",
      "units": {
        "en": "MWh",
        "nl": "MWh"
      }
    },
    "operational_status": {
      "type": "string",
      "title": {
        "en": "Operational Status",
        "nl": "Operationele status"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/operational_status.svg"
    },
    "battery": {
      "type": "number",
      "title": {
        "en": "Battery Charge",
        "nl": "Batterij lading"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/battery.svg",
      "units": {
        "en": "%",
        "nl": "%"
      }
    },
    "power_drawn": {
      "type": "number",
      "title": {
        "en": "Power Drawn",
        "nl": "Stroom afname"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/power_drawn.svg",
      "units": {
        "en": "W",
        "nl": "W"
      }
    },
    "powergrid_feed_in": {
      "type": "number",
      "title": {
        "en": "Powergrid Feed In",
        "nl": "Vermogen netvoeding"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/powergrid_feed_in.svg",
      "units": {
        "en": "W",
        "nl": "W"
      }
    },
    "battery_capacity": {
      "type": "number",
      "title": {
        "en": "Battery Capacity",
        "nl": "Batterij capaciteit"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/battery_capacity.svg",
      "units": {
        "en": "%",
        "nl": "%"
      }
    }
  },
	"drivers": [
		{
			"id": "inverter",
			"name": {
				"en": "SMA Inverters",
				"nl": "SMA Omvormer"
			},
			"images": {
				"large": "drivers/inverter/assets/images/large.jpg",
				"small": "drivers/inverter/assets/images/small.jpg"
			},
			"class": "sensor",
			"capabilities": [
        "measure_power",
				"meter_power",
				"measure_voltage",
        "measure_yield"
			],
      "capabilitiesOptions": {
        "meter_power": {
          "title": {
            "en": "Daily Yield",
            "nl": "Dagopbrengst"
          }
        }
      },
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Inverter settings",
						"nl": "Omvormer instellingen"
					},
					"children": [
						{
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres"
							}
						},
						{
							"id": "port",
							"type": "number",
							"value": 502,
							"step": 1,
							"label": {
								"en": "Port",
								"nl": "Poort"
							}
						},
						{
							"id": "polling",
							"type": "number",
							"value": 5,
							"step": 1,
							"attr": {
								"min": 2,
								"max": 3600
							},
							"label": {
								"en": "Polling",
								"nl": "Polling"
							}
						}
					]
				}
			]
		},
    {
			"id": "storage",
			"name": {
				"en": "SMA Sunny Boy Storage",
				"nl": "SMA Sunny Boy Storage"
			},
			"images": {
				"large": "drivers/storage/assets/images/large.jpg",
				"small": "drivers/storage/assets/images/small.jpg"
			},
			"class": "sensor",
			"capabilities": [
        "operational_status",
        "battery",
        "measure_power",
        "power_drawn",
        "powergrid_feed_in",
        "battery_capacity"
			],
      "capabilitiesOptions": {
        "measure_power": {
          "title": {
            "en": "Charge / Discharge",
            "nl": "Opladen / Ontladen"
          }
        }
      },
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Sunny Boy Storage settings",
						"nl": "Sunny Boy Storage instellingen"
					},
					"children": [
						{
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres"
							}
						},
						{
							"id": "port",
							"type": "number",
							"value": 502,
							"step": 1,
							"label": {
								"en": "Port",
								"nl": "Poort"
							}
						},
						{
							"id": "polling",
							"type": "number",
							"value": 5,
							"step": 1,
							"attr": {
								"min": 2,
								"max": 3600
							},
							"label": {
								"en": "Polling",
								"nl": "Polling"
							}
						}
					]
				}
			]
		}
	]
}
